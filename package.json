{
  "name": "boggle",
  "version": "0.0.1",
  "description": "A web-based implementation of the Boggle game for React study purposes.",
  "author": "Leonardo Quixada <lquixada@gmail.com>",
  "license": "MIT",
  "scripts": {
    "precommit": "lint-staged",
    "prestart": "npm rebuild node-sass && run-s build:web build:bundle",
    "pretest:ci": "npm run build:bundle",
    "analyze": "./tasks/analyze",
    "dev": "pm2 start process.yml --only boggle-dev --no-daemon",
    "build:bundle": "NODE_ENV=production webpack-cli -p",
    "build:web": "babel -D -q src -d web",
    "deploy": "git push -f origin master:heroku",
    "docker:build": "docker build . -t lquixada/boggle",
    "docker:pull": "docker pull lquixada/boggle",
    "docker:push": "docker push lquixada/boggle",
    "docker:run": "docker run -p 3000:3000 lquixada/boggle",
    "jest": "jest",
    "jest:ci": "jest --coverage",
    "lint": "run-p lint:js lint:sass",
    "lint:js": "eslint --ignore-pattern web --ignore-pattern .reports .",
    "lint:sass": "sass-lint --no-exit --verbose",
    "start": "pm2 start process.yml --only boggle-prod --no-daemon",
    "test": "run-p jest lint",
    "test:ci": "run-p jest:ci lint"
  },
  "dependencies": {
    "assets-webpack-plugin": "3.5.1",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-loader": "7.1.4",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-react": "6.24.1",
    "body-parser": "1.18.2",
    "clean-webpack-plugin": "0.1.19",
    "compression": "1.7.2",
    "cross-fetch": "2.1.0",
    "css-loader": "0.28.11",
    "es6-promise": "4.2.4",
    "express": "4.16.3",
    "extract-text-webpack-plugin": "4.0.0-beta.0",
    "helmet": "3.12.0",
    "history": "4.7.2",
    "immutable": "3.8.2",
    "lodash": "4.17.5",
    "morgan": "1.9.0",
    "node-sass": "4.8.3",
    "npm-run-all": "4.1.2",
    "pm2": "2.10.2",
    "prop-types": "15.6.1",
    "react": "16.3.1",
    "react-dom": "16.3.1",
    "react-github-fork-ribbon": "0.5.1",
    "react-hot-loader": "4.0.1",
    "react-redux": "5.0.7",
    "react-router-config": "1.0.0-beta.4",
    "react-router-dom": "4.2.2",
    "react-router-redux": "5.0.0-alpha.6",
    "redux": "3.7.2",
    "redux-raven-middleware": "1.2.0",
    "redux-thunk": "2.2.0",
    "sass-loader": "6.0.7",
    "style-loader": "0.20.3",
    "sw-precache-webpack-plugin": "0.11.5",
    "webpack": "4.5.0",
    "webpack-cli": "2.0.14",
    "winston": "2.4.1"
  },
  "devDependencies": {
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "eslint": "4.19.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-google": "0.9.1",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-react": "7.7.0",
    "husky": "0.14.3",
    "identity-obj-proxy": "3.0.0",
    "jest": "22.4.3",
    "lint-staged": "7.0.4",
    "nock": "9.2.3",
    "react-test-renderer": "16.3.1",
    "sass-lint": "1.12.1",
    "supertest": "3.0.0",
    "webpack-bundle-analyzer": "2.11.1",
    "webpack-dev-middleware": "3.1.2",
    "webpack-hot-middleware": "2.22.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lquixada/boggle.git"
  },
  "engines": {
    "node": "8.9.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
